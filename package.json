{
  "name": "simple-http-server-otel",
  "version": "1.0.0",
  "description": "Simple HTTP server with OpenTelemetry auto-instrumentation",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npx tsx --import ./src/instrumentation.ts ./src/server.ts",
    "dev": "npm run build && npm start",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.64.6",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@opentelemetry/sdk-trace-node": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.19.0"
  }
}